<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.MainController">
    <left>
        <VBox prefHeight="600.0" prefWidth="200.0" spacing="10.0" style="-fx-padding: 10;">
            <children>
                <Label text="Lista Unitermów:" />
                <ListView fx:id="listViewUnitermy" prefHeight="300.0" />
                <Separator />
                <Label text="Nazwa:" />
                <TextField fx:id="nameTextField" />
                <Label text="Opis:" />
                <TextField fx:id="descTextField" />
                <Button fx:id="btnDodaj" text="Dodaj do listy" />
            </children>
        </VBox>
    </left>
    <center>
        <Canvas fx:id="centerCanvas" height="600.0" width="600.0" />
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 10;">
            <children>
                <Button fx:id="btnSekwencja" text="Sekwencja" />
                <Button fx:id="btnZrownoleglenie" text="Zrównoleglenie" />
                <Button fx:id="btnMerge" text="Merge" />
                <Button fx:id="btnWyczysc" text="Wyczyść" />
            </children>
        </HBox>
    </bottom>
</BorderPane>